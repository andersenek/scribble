<div class="post">
  <div class="post-header">
  <%= @post.title %> <%= link_to "(edit)", edit_post_path %></h3>
  </div>

  <%= image_tag @post.photo_url, class: "post-photo" %>

  <p><%= @post.content %></p>


  <h3>Comments <%= link_to "(+)", new_user_comment_path(@post) %></h3>
  <ul>
    <% @comments.each do |comment| %>
      <li>
        <%= link_to "#{comment.subject} (#{comment.comment})", user_comment_path(@user, comment) %>
      </li>

    <% end %>
  </ul>

  <%= render partial: "comments/form" %>
</div>
