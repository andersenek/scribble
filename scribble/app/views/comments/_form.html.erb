<div class="custom-layout">
<%= form_for ([@post, @comment]) do |f| %>
  <%= f.label :subject %>
  <%= f.text_field :subject %>

  <%= f.label :comment %>
  <%= f.text_field :comment %>

  <!--  rather than putting this info here in the form, you should associate the
    post with the logged in user in the `create` action. putting the field here
    makes your app vulnerable to spoofing, a user could change this value to create
    a comment associated with someone else. -->
  <%= f.hidden_field :user_id, :value => @user.id %>

  <%= f.hidden_field :user_email, :value => current_user.email %>

  <%= f.submit "Submit" %>
<% end %>
</div>
